<div class="msg_form">
<%= label_tag(:message, "What are you doing?") %><br />
    <% form_for :tweet, tweet, :url => tweet_url(user.id), :html => { :id => "message_form" } do |f| %>
      <%= f.text_area :body, :rows => 2, :cols => 40 %> <br />

      <div class="tweet-controls">
        <%= f.submit "Tweet", :class => "submit" %><br />
      </div>
    <% end %>

</div>
